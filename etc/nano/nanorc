include "~/.local/etc/nano/nanorc.d/*.nanorc"

set autoindent
set constantshow
set cutfromcursor
set multibuffer
set nohelp
set nonewlines
set nowrap
set preserve
set smarthome
set suspend
set tabsize 4

bind	^A	mark		main
bind	^C	copy		main
bind	^F	whereis		all
bind	^G	gotoline	main
#bind	^I	indent		main
bind	^M	enter		main
bind	^N	insert		main
bind	^O	insert		main
bind	^Q	cancel		all
bind	^Q	exit		main
bind	^S	writeout	main
bind	^R	replace		all
bind	^W	cancel		all
bind	^W	exit		main
bind	^V	paste		main
bind	^X	cut			main
bind	M-Y	redo		main
bind	M-Z	undo		main
bind	^]	findbracket	main

bind	F1	nohelp		main
bind	F2	help		main
bind	F3	findnext	main
bind	F5	refresh		all
bind	F12	suspend		all
